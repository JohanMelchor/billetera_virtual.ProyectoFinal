<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="450.0" prefWidth="600.0" 
            xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="co.edu.uniquindio.viewcontroller.ReporteViewController">
   <children>
      <VBox layoutX="20.0" layoutY="20.0" prefHeight="410.0" prefWidth="560.0" spacing="20.0">
         <children>
            <!-- Título -->
            <Label fx:id="lblTitulo" text="Generar Reporte PDF">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            
            <!-- Información del reporte -->
            <TitledPane text="Información del Reporte" expanded="true">
               <content>
                  <TextArea fx:id="txtInfo" prefHeight="150.0" 
                            text="Información del reporte aparecerá aquí..." 
                            wrapText="true" editable="false" 
                            style="-fx-background-color: #f5f5f5;" />
               </content>
            </TitledPane>
            
            <!-- Selección de ruta -->
            <TitledPane text="Ubicación del Archivo" expanded="true">
               <content>
                  <VBox spacing="10.0">
                     <children>
                        <HBox spacing="10.0" alignment="CENTER_LEFT">
                           <children>
                              <Label text="Guardar en:" />
                              <TextField fx:id="txtRuta" prefWidth="350.0" 
                                         promptText="Seleccione dónde guardar el archivo PDF..." 
                                         editable="false" />
                              <Button fx:id="btnSeleccionar" 
                                      text="Seleccionar..." 
                                      onAction="#onSeleccionar"
                                      style="-fx-background-color: #FF9800; -fx-text-fill: white;" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </TitledPane>
            
            <!-- Botón generar -->
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="btnGenerar" 
                          text="Generar Reporte PDF" 
                          onAction="#onGenerar"
                          prefWidth="200.0" 
                          prefHeight="40.0"
                          style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>